{
  "name": "sharp-replay",
  "version": "0.0.27",
  "description": "replay tool nodejs version",
  "main": "./dist/startup.js",
  "bin": {
    "sprt": "./dist/startup.js"
  },
  "scripts": {
    "check": "tslint -c tslint.json -p tsconfig.json --fix",
    "build": "rimraf dist/ && npm run check && tsc -p tsconfig.json && npm run copy",
    "build:prod": "rimraf dist/ && npm run check && tsc -p tsconfig-prod.json  && npm run copy",
    "copy": "cpy config/*.*  dist/config && cpy *.md dist/ && cpy LICENSE dist/",
    "start": "node dist/startup.js",
    "dev": "ts-node --files startup.ts",
    "lint": "tslint -c tslint.json -p tsconfig.json --fix",
    "changelog": "standard-version --release-as patch --no-verify -t v-",
    "release": "git fetch origin dev && git checkout master && git merge dev && npm run changelog && git push --follow-tags origin master",
    "pub": "npm run release && npm run build:prod && node prepub && cd dist && npm publish",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "cli",
    "replaytool",
    "prism"
  ],
  "author": "czhang13@slb.com",
  "license": "MIT",
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.{ts}": [
      "git add"
    ]
  },
  "publishConfig": {
    "registry": "http://163.184.146.22/"
  },
  "engines": {
    "node": ">=12.0.0"
  },
  "dependencies": {
    "avro-js": "^1.9.2",
    "axios": "^0.19.2",
    "axios-retry": "^3.1.2",
    "azure-iot-device": "^1.13.0",
    "azure-iot-device-amqp": "^1.12.0",
    "azure-keyvault": "^3.0.5",
    "chalk": "^4.0.0",
    "clear": "^0.1.0",
    "commander": "^5.0.0",
    "dayjs": "^1.8.23",
    "figlet": "^1.3.0",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.15",
    "log-symbols": "^3.0.0",
    "log-update": "^4.0.0",
    "node-cache": "^5.1.0",
    "ora": "^4.0.3",
    "semver": "^7.3.2",
    "user": "0.0.0",
    "uuid": "^7.0.2",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@types/clear": "^0.1.0",
    "@types/figlet": "^1.2.0",
    "@types/jsonwebtoken": "^8.3.8",
    "@types/lodash": "^4.14.149",
    "@types/node": "^13.9.0",
    "@types/semver": "^7.1.0",
    "@types/uuid": "^7.0.0",
    "commitizen": "^4.0.4",
    "cpy-cli": "^3.1.0",
    "cz-conventional-changelog": "^3.1.0",
    "husky": "^4.2.3",
    "rimraf": "^3.0.2",
    "standard-version": "^7.1.0",
    "ts-node": "^8.6.2",
    "tslint": "^6.1.1",
    "typescript": "^3.8.3"
  }
}
